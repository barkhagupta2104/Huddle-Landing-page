pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout your Git repository
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], userRemoteConfigs: [[url: 'https://github.com/barkhagupta2104/Huddle-Landing-page.git']]])
            }
        }

        stage('Copy Files') {
            steps {
                // Use the bat step to run xcopy
                bat(script: 'xcopy /s /e /y "C:\\Users\\acer\\Desktop\\huddle-landing-page-with-single-introductory-section-master.github.io" "C:\\Apache24\\htdocs"')
            }
        }

        // Add more stages as needed for your pipeline
    }

    post {
        success {
            // Add post-build actions on success
        }
        failure {
            // Add post-build actions on failure
        }
    }
}
